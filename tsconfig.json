{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "2dge/*": ["./src/*"],
      "constants/*": ["./src/constants/*"],
      "singletons/*": ["./src/singletons/*"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
